<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/billtime" />


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edDateFrom"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ems="20"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imgCalendarFrom"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/edDateFrom"
            android:paddingBottom="4dp"
            android:src="@drawable/calendar" />
        <EditText
            android:id="@+id/edDateTo"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ems="20"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            />

        <ImageView
            android:id="@+id/imgCalendarTo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/edDateFrom"
            android:paddingBottom="4dp"
            android:layout_alignBottom="@id/edDateTo"
            android:src="@drawable/calendar" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgCalendarFrom"
            android:layout_marginTop="16dp"
            android:text="TÃ¬m"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/lvTimHoaDonTheoKhoangThoiGian"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>